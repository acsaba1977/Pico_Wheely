{
	"name": "Raspberry Pi Pico - Dev Container",
	"dockerFile": "Dockerfile",
	"appPort": [8000],
	"runArgs": [
    "--privileged",
    "--device=/dev/bus/usb:/dev/bus/usb",
    "--group-add=dialout"
  ],
    "mounts": [
      "source=projectname-bashhistory,target=/commandhistory,type=volume"
  ],
	// "runArgs": ["--gpus", "all"],  // Enables GPU access if available
	"customizations": {
	  "vscode": {
		"settings": {
		  "terminal.integrated.defaultProfile.linux": "bash"
		},
		"extensions": [
		  "ms-python.python",
		  "ms-python.vscode-pylance",
		  "ms-toolsai.jupyter",
		  "ms-python.python",
		  "visualstudioexptteam.vscodeintellicode",
		  "ms-python.vscode-pylance",
		  "paulober.pico-w-go",
		  "github.copilot",
		  "github.copilot-chat"
		]
	  }
		},
		"postCreateCommand": "pip install -r .devcontainer/requirements.txt",
		"postStartCommand": "sudo /lib/systemd/systemd-udevd --daemon && sudo udevadm trigger"
  }